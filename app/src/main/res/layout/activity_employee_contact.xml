<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_employee_contact"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.calvin.cs262teamd.cleaningcrew.EmployeeContactActivity"
    android:background="#818181">

    <TextView
        android:text="Employee 1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/employeeIdOneTextView"
        android:background="@android:color/darker_gray"
        android:paddingLeft="10dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="24sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Phone: (555) 555 - 5555"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/employeePhoneNumberOneTextView"
        android:paddingLeft="12dp"
        android:paddingTop="10dp"
        android:layout_below="@id/employeeIdOneTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:text="Email: bleh@example.com"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/employeeEmailOneTextView"
        android:paddingLeft="12dp"
        android:layout_below="@id/employeePhoneNumberOneTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:text="Hours: 12pm - 8pm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/employeeHoursOneTextView"
        android:paddingLeft="12dp"
        android:paddingBottom="10dp"
        android:layout_below="@id/employeeEmailOneTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:text="Employee 2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/employeeIdTwoTextView"
        android:background="@android:color/darker_gray"
        android:paddingLeft="10dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="24sp"
        android:layout_below="@id/employeeHoursOneTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Phone: (555) 555 - 5555"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/employeePhoneNumberTwoTextView"
        android:paddingLeft="12dp"
        android:paddingTop="10dp"
        android:layout_below="@id/employeeIdTwoTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:text="Email: bleh@example.com"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/employeeEmailTwoTextView"
        android:paddingLeft="12dp"
        android:layout_below="@id/employeePhoneNumberTwoTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:text="Hours: 12pm - 8pm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/employeeHoursTwoTextView"
        android:paddingLeft="12dp"
        android:paddingBottom="10dp"
        android:layout_below="@id/employeeEmailTwoTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

</RelativeLayout>
